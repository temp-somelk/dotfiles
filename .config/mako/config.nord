max-visible=4
sort=-priority
layer=overlay
anchor=top-right

font=SourceSansPro 10
background-color=#8fbcbb
text-color=#2e3440
width=350
height=150
margin=15
padding=10,15
border-size=0
border-radius=0
progress-color=over #000000
icons=0
markup=1
actions=1
format=<small>%a</small>\n<b>%s</b>\n\n%b
default-timeout=0
ignore-timeout=0
group-by=app-name,urgency,expiring,

[grouped]
format=(%g) <small>%a</small>\n<b>%s</b>\n\n%b

[hidden]
format=%h more notifications. %t total.

# [hidden urgency="high"]
# background-color=#ee3a3a
# format=%h more notifications. %t total.

[urgency="high"]
background-color=#bf616a
text-color=#ffffff
format=<small>%a</small>\n<b>%s</b>\n\n%b

[urgency="high" grouped]
background-color=#bf616a
text-color=#ffffff
format=(%g) <small>%a</small>\n<b>%s</b>\n\n%b
